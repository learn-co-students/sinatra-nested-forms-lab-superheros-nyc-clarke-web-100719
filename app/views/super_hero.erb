
<h1>Create a Team and Heroes!</h1>

<form action="/teams" method="POST">
  Team Name:<br>
  <input type="text" name="team[name]" id="name"><br>

  Team Motto:<br>
  <input type="text" name="team[motto]" id="motto"><br>


  <% 1.upto(3) do |i| %>
    <h1>Hero <%= i %></h1>

    Hero's Name:<br>
    <input type="text" name="member<%= i %>_name" id="member<%= i %>_name"><br>

    Hero's Power:<br>
    <input type="text" name="member<%= i %>_power" id="member<%= i %>_power"><br>

    Hero's Biography:<br>
    <input type="text" name="member<%= i %>_bio" id="member<%= i %>_bio"><br>
  <% end %>

    <input type="submit" value="submit"/>

</form>